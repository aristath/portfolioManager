[Unit]
Description=Arduino Trader - Scoring Service
After=network.target

[Service]
Type=simple
User=arduino
WorkingDirectory=/home/arduino/arduino-trader
Environment="PYTHONPATH=/home/arduino/trader"
Environment="DEVICE_CONFIG_PATH=/home/arduino/arduino-trader/app/config/device.yaml"
ExecStart=/home/arduino/arduino-trader/venv/bin/python services/scoring/main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
